@using Microsoft.AspNet.Identity


<!-- User Account Menu -->
<li class="dropdown user user-menu">
    <!-- Menu Toggle Button -->
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <!-- The user image in the navbar-->
        @if (ViewBag.admin == "isAdmin")
        {

        }
        else
        {
            foreach (var jung in ViewBag.how)
            {
                <img src="@Url.Content(jung.FilePath)" class="img-circle" alt="User Image" height="30" width="30">
            }
        }
        <!-- hidden-xs hides the username on small devices so only the image appears. -->
        <span class="hidden-xs">@User.Identity.GetUserName()</span>
    </a>
    <ul class="dropdown-menu">
        <!-- The user image in the menu -->
        <li class="user-header">
            @if (ViewBag.admin == "isAdmin")
            {

            }
            else
            {
                foreach (var jung in ViewBag.how)
                {
                    <img src="@Url.Content(jung.FilePath)" class="img-circle" alt="User Image">
                }
            }

            <p>
                @User.Identity.GetUserName()
                <small>Member since Nov. 2012</small>
            </p>
        </li>
        <!-- Menu Body -->
        <li class="user-body">

            <!-- /.row -->
        </li>
        <!-- Menu Footer-->
        <li class="user-footer">
            <div class="pull-left">
                <a href="#" class="btn btn-default btn-flat">Profile</a>
            </div>
            <div class="pull-right">
                @if (Request.IsAuthenticated)
                {
                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                    {
                        @Html.AntiForgeryToken()
                        <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-default btn-flat">Sign out</a>
                    }
                }

            </div>
        </li>
    </ul>
</li>